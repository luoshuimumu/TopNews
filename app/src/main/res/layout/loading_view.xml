<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="com.example.luoshuimumu.TopNews.gank.vm.LoadingViewContainer"/>

        <variable
            name="status"
            type="com.example.luoshuimumu.TopNews.gank.vm.LoadingViewContainer"/>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:status="@{status.loadStatusCode}">

        <TextView
            android:id="@id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_view_loading"/>

    </RelativeLayout>
</layout>
